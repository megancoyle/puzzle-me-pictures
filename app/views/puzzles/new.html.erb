<h1>New Puzzle</h1>
<%= form_for :puzzle, url: puzzles_path do |f| %>

  <% if @puzzle.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@puzzle.errors.count, "error") %> prohibited
        this puzzle from being saved:
      </h2>
      <ul>
        <% @puzzle.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', puzzles_path %>
