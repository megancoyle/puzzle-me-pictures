<div class="container">
  <div class="content">
    <img src="/images/puzzle-piece.png" class="main-icon" >
    <h1>All the Puzzles</h1>
    <%= link_to 'Make + Share', new_puzzle_path %>
    <div class="grid-content">
      <% @puzzles.each do |puzzle| %>
        <div class="puzzle-grid">
          <h2><%= link_to puzzle.title, puzzle_path(puzzle) %></h2>
          <%= link_to (image_tag puzzle.image), puzzle_path(puzzle) %>
        </div>
      <% end %>
    </dive>
  </div>
</div>
