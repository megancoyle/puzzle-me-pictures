<div class="container">
  <div class="content">
    <h1>Uploaded By You</h1>
      <% if @user_created.present? == false %>
        <p>You need to create a puzzle to see something here. Checkout the <%= link_to 'puzzle page', puzzles_path %> to get started.</p>
      <% end %>
      <% @user_created.sort { |a,b| a.title <=> b.title }.each do |puzzle| %>
        <div class="puzzle-grid">
          <h2><%= link_to puzzle.title, puzzle_path(puzzle) %></h2>
          <%= link_to (image_tag puzzle.image), puzzle_path(puzzle) %>
        </div>
      <% end %>
  </div>
</div>
